{
    "manifest_version": 2,
    "name": "Hide Letterboxd Ratings",
    "version": "1.0",
    "description": "Hide ratings and reviews on Letterboxd.",
    "icons": {
        "48": "icons/placeholder.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://letterboxd.com/film/*"
            ],
            "js": [
                "hide_ratings.js"
            ]
        }
    ]
}